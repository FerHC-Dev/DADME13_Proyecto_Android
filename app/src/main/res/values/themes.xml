<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ASA" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primario_300</item>
        <item name="colorPrimaryVariant">@color/primario_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primario_300</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.ASA.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ASA.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ASA.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

                    <!-- Style for title page -->
    <style name="titlePage" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primario_200</item>
        <item name="fontFamily">@font/institucional</item>
    </style>

    <style name="editTextPage" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primario_200</item>
        <item name="hintTextColor">@color/neutral_100</item>
        <item name="fontFamily">@font/institucional</item>
        <item name="android:background">@drawable/shape_input</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="btnText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/institucional</item>
        <item name="android:textStyle">bold</item>
        <item name="android:autoSizeMaxTextSize">14sp</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="simpleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/institucional</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="simpleTextFooter" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/institucional</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="subTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/institucional</item>
        <item name="android:textStyle">bold</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="principalText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/institucional</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="btnService" parent="Widget.AppCompat.Button">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primario_200</item>
        <item name="fontFamily">@font/institucional</item>
        <item name="android:background">@drawable/shape_btn_service</item>
    </style>


</resources>